<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>使用模板 @ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <header class="border-bottom lh-1 py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <a class="link-secondary" href="#">訂閱</a>
                </div>
                <div class="col-4 text-center">
                    <a class="blog-header-logo text-body-emphasis text-decoration-none fs-1" href="#">披薩王</a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="link-secondary" href="#" aria-label="Search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
                    </a>
                    <partial name="_LoginPartial" />
                    @* <a class="btn btn-sm btn-outline-secondary" href="#">註冊</a> *@
                </div>
            </div>
        </header>
        <div class="nav-scroller py-1 mb-3 border-bottom">
            <nav class="nav nav-underline justify-content-between">
                <a class="nav-item nav-link link-body-emphasis active" href="#">推薦</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">選單</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">下載APP</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">會員中心</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">特許招募</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">今日爆款</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">最新單品</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">特色飲品</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">附近餐廳</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">粉絲優惠</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">新聞中心</a>
                <a class="nav-item nav-link link-body-emphasis" href="#">關於我們</a>
            </nav>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>