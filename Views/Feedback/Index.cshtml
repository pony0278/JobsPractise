@model PizzaKing.Models.Feedback;

<h2>評價</h2>
<form asp-action="CreateFeedback" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label">姓名</label>
        <div class="col-md-5">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">Email</label>
        <div class="col-md-5">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Comments" class="col-md-2 control-label">反饋意見</label>
        <div class="col-md-5">
            <span asp-validation-for="Comments" class="text-danger"></span>
            <textarea asp-for="Comments" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="送出意見" />
        </div>
    </div>
</form>